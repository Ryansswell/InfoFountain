<div class="container-fluid mainBody">
    <h1 class="text-light">Our Latest Articles!</h1>   
  {{#each posts as |post|}}

  {{!-- ######################### --}}
    <div class="card w-100" style="width: 18rem;">
      <div class="card-body" style="background-color:rgb(187, 201, 226)">
        <h5 class="card-title"><a href="/posts/{{id}}">Topic: {{title}}</a></h5>
        
        <p><strong>Posted On: {{date_created}}</strong></p>

        <p class="card-text">
          <strong>
          Thread:</strong> {{postText}}
        </p>
        <p class="card-text">
          {{#each comments as |comment|}}
          ---"{{comment_text}}"<br>
          {{/each}}
        </p>
      </div>
    </div>
  {{/each}} 

