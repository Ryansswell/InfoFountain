<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group text-left">
        <label for="email-login"></label>
        <input class="form-input" type="text" placeholder="Enter Email Here" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login"></label>
        <input class="form-input" placeholder="Enter Password" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup"></label>
        <input class="form-input" placeholder="Enter Username Here" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup"></label>
        <input class="form-input" placeholder="Enter Email Here" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup"></label>
        <input class="form-input" placeholder="Enter Your Password" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
