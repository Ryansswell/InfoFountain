
<div>
  <h2 class="chartTitle">Welcome to your User Portal, {{username}}!
</div>

 
  {{#each posts as |post|}}

  {{!-- ######################### --}}
    <div class="card w-100" style="width: 18rem;">
      <div class="card-body" style="background-color: rgb(187, 201, 226);">
        <h5 class="card-title"><a href="/posts/{{id}}">Topic: {{title}}</a></h5>
        <p><strong>Posted By You On: {{date_created}}</strong></p>
    {{!-- <h6 class="card-subtitle mb-2 text-muted"></h6> --}}
        <p class="card-text">
          Post: {{post_text}}
        </p>
        <p class="card-text">
          {{#each comments as |comment|}}
          ---"{{comment_text}}"-{{user_id}}<br>
          {{/each}}
        </p>
      </div>
    </div>
  {{/each}} 
 


  


<script src="/js/profile.js"></script>
